<div class="container mt-32">
  <div class="row justify-content-center">
    <div class="col-lg-6">

     <%= simple_form_for [@workspace, @booking] do |f| %>
        <%= f.input :date_begin, as: :date, html5: true %>
        <%= f.input :date_end, as: :date, html5: true %>
        <%= f.button :submit, "Book", class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
