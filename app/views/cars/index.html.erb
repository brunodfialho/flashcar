<h1>Choose your car</h1>
<div class="container">
  <div class="row">
    <% @cars.each do |car| %>
      <div class="col">
        <div class="card mb-3" style="width: 18rem; height: 100%">
          <img src="https://media.ed.edmunds-media.com/audi/a7/2020/oem/2020_audi_a7_sedan_prestige-55-tfsi-quattro_fq_oem_1_815.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= car.name %></h5>
            <p class="card-description"><%= car.description %></p>
            <h5 class="card-price"><%= car.price %> CHF</h5>
            <a href="#" class="btn btn-primary">Louer</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
